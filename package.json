    "ts-jest": "^26.4.4"
  },
  "dependencies": {
    "node-rsa": "^1.1.1",
    "tslib": "^2.3.1"
  },
  "peerDependencies": {
    "@hyper-hyper-space/core": "0.10.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "verbose": true,
    "modulePaths": [
      "<rootDir>/test",
      "<rootDir>/src",
      "<rootDir>/node_modules/**"
